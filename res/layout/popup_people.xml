    android:background="#88ffffff"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/tv2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:textColor="#0000aa"
        android:text="2" />

    <TextView
        android:id="@+id/tv3"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textColor="#0000aa"
        android:gravity="center"
        android:text="3" />

    <TextView
        android:id="@+id/tv4"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:gravity="center"
        android:textColor="#0000aa"
        android:text="4" />

</LinearLayout>